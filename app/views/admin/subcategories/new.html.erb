<%- model_class = Subcategory -%>
<div class="mid_contain">
        
  <div style="width:100%;float:left">
          
                  <div class="page-header">
                    <h2><div class="comman_heading">Add Subcategory</div><h2>
                  </div>
         
          <%= form_for([:admin, @subcategory],:html =>{:id => "new_category_form",:multipart => true}) do |f| %>
                    <table class="table table-bordered" >
                    
                      <% if @subcategory.errors.any? %>
                          <tr>
                          <td height="30" align="center" valign="middle" bgcolor="#FFFFFF"  colspan="2" id="notice">
                          <% @subcategory.errors.full_messages.each do |msg| %>
                            <div style="color:red"><%= msg %></div>
                          <% end %>
                          </td>
                          </tr>                       
                      <% end %>
                     <tr>
                        <td height="30" align="right" valign="top" bgcolor="#FFFFFF">
                         <strong> Name</strong><span style="color:red">*</span>
                        </td>
                        <td align="left" valign="top" bgcolor="#FFFFFF">
                             <%= f.text_field :name,:class =>"input-block-level",:maxlength =>60,:size=>20 %>

                        </td>
                      </tr>
                                     
                       <tr>  
                        <td height="30" align="left" valign="top" bgcolor="#FFFFFF" width="200" ></td>
                           <td align="left" valign="top" bgcolor="#FFFFFF">
                           <%= f.submit "Save", :class=>"btn btn-primary pull-left" %>
                           <input type="button" value="Back" style="margin-left:5px" class="btn btn-primary pull-left" onClick="location.href='/admin/subcategories'" >
                          
                        </td>
                       </tr>                  
                    </table>
          <% end %>

  </div>        
</div>