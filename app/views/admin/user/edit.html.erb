<script>
  
  $(document).ready (function() {

      
    $("#edit_password").validate({
      onclick: false,
      rules:
        {
        "user[username]":{required: true},
        "user[email]":{required: true,
          email:true},
       
        "user[password]":{ required:true,
          minlength:6 },
        "user[password_confirmation]":{required:true,equalTo:"#newpassword"  },
             "user[status]":{ required:true }
             
 
      },
      messages: {
        "user[username]":{required: 'Please enter username'} ,
        "user[email]":{required: 'Please enter email'} ,
         
        "user[password]": {required: 'Please enter  password'},
        "user[password_confirmation]":{required:"Please enter confirm password"},
             "user[status]": {required: 'Please select user type'}
         
      }

    });
  });
</script>
<div  class="user_body">
    
     <div align="left" width="80%">
      <%=link_to "Home",admin_root_path %> > <%=link_to "Manage User",admin_user_index_path %> > Edit User
    </div>
    <div class="wrapper signup">
      <!-- Box -->
      <div class="widget widget-heading-simple">
        
        <div class="widget-head">
          <h3 class="heading">Edit user</h3>

          <div class="pull-right">
           

          </div>
        </div>
        <div class="widget-body">
<div><%= flash[:notice]%></div>
         <%= form_for(["admin",@user],:html => { :id => :edit_password}) do |f| %>
          <!-- Row -->
          <div class="row-fluid row-merge">
          
           
            <div class="span6">
              <div class="innerR">
              <label class="strong">Username</label>
                
                 <%= f.text_field :username, :autofocus => true,:size=> "30", :placeholder=>"Your Username"  %>
                <label class="strong">Email</label>
                
                 <%= f.email_field :email, :autofocus => true, :size=> "30", :placeholder=>"Your Email"  %>
                 <label class="strong">User Status</label>

                 <%= f.select :status,options_for_select([["Active", "true"], ["Inactive", "false"]]),{:include_blank => "Select "}  %>
                  
           <!-- Assigning roles -->

          <% unless @role.empty? %>
          <label class="strong">Remove Role</label>
                  <% @role.each do |r| %>             
                   <%= r.name %> <%=check_box_tag "deactive_role_ids[]", r.name %>
                      <img src="/assets/active.png" title="Active" />
                    <%#=  image_tag('../assets/active.png',:title =>"Inactive",:border =>"none")  %>
                  <% end%>
              <% end%>   
            <% unless @role_except.empty? %>
                <label class="strong">Add Role</label>
                  <%  @role_except.each do |r| %>           
                   <%= r.name %> <%=check_box_tag "active_role_ids[]", r.name %>
                   <img src="/assets/deactive.png" title="Inactive" />
                    <%#=  image_tag('../assets/deactive.png',:title =>"Inactive",:border =>"none")  %>
                  <% end%>
            <% end%>
            <% if @role.empty? && @role_except.empty? %>
             <label class="strong">Add Role</label>
              <%  @role_all.each do |r| %>           
                   <%= r.name %> <%=check_box_tag "active_role_ids[]", r.name %>
                      <img src="/assets/active.png" title="Active" />
                    <%#=  image_tag('../assets/deactive.png',:title =>"Inactive",:border =>"none")  %>
                  <% end%>
               <% end%>
        <label class="strong"></label>

                   <!-- <label class="strong">User Role</label>
                  <%=  select("name", "role", @user.roles.collect {|p| [ p.name] }, { :include_blank => 'Select Role' })%> -->
               
               <!--  <label class="strong">Confirm Password</label>
                 <%= f.password_field :password_confirmation ,:class=>"input-block-level",:placeholder=>"Your Password confirmation"%> -->
              </div>
              
          <i></i><%= f.submit "Update",:style=>"font-size:12px", :class=>"btn btn-success" %>
          
         
            </div>
          
          <% end %>
            

            
          </div>
          <!-- // Row END -->
          
        </div>
        <!-- // Box END -->
       
      </div>
    </div>
</div>

