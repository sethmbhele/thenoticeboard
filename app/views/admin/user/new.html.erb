<script>
  
  $(document).ready (function() {

      
    $("#new_user").validate({
      onclick: false,
      rules:
        {
        "user[username]":{required: true},
        "user[email]":{required: true,
          email:true},
       
        "user[password]":{ required:true,
          minlength:6 },
        "user[password_confirmation]":{required:true,equalTo:"#newpassword"  },
             "user[status]":{ required:true }
             
 
      },
      messages: {
        "user[username]":{required: 'Please enter username'} ,
        "user[email]":{required: 'Please enter email'} ,
         
        "user[password]": {required: 'Please enter  password'},
        "user[password_confirmation]":{required:"Please enter confirm password"},
             "user[status]": {required: 'Please select user type'}
         
      }

    });
  });
</script>
<div  class="user_body">
    
     <div align="left" width="80%">
      <%=link_to "Home",admin_root_path %> > <%=link_to "Manage User",admin_user_index_path %> > Create User
    </div>
    <div class="wrapper signup">
      <!-- Box -->
      <div class="widget widget-heading-simple">
        
        <div class="widget-head">
          <h3 class="heading">Create user</h3>

          <div class="pull-right">
           

          </div>
        </div>
        <div class="widget-body">

           <%= form_for(@user,:url => admin_user_index_path,:html => { :method => :post }) do |f| %>
          <!-- Row -->
          <div class="row-fluid row-merge">
          
           
            <div class="span6">
              <div class="innerR">
              <label class="strong">Username</label>
                
                 <%= f.text_field :username, :autofocus => true, :class=>"input-block-level", :placeholder=>"Your Username"  %>
                <label class="strong">Email</label>
                
                 <%= f.email_field :email, :autofocus => true, :class=>"input-block-level", :placeholder=>"Your Email"  %>

                 <label class="strong">Password</label>
                 <%=  f.password_field :password ,:class=>"input-block-level", :placeholder=>"Your Password" %>

                <label class="strong">Confirm Password</label>
                 <%= f.password_field :password_confirmation ,:class=>"input-block-level",:placeholder=>"Your Password confirmation"%>
                 <label class="strong">User Status</label>
                 <%= f.select :status,options_for_select([["Active", "true"], ["Inactive", "false"]]),{:include_blank => "Select "}  %>

                   <label class="strong">User Role</label>
                  <%=  select("name", "role", Role.all.collect {|p| [ p.name] }, { :include_blank => 'Select Role' })%>
               
               <!--  <label class="strong">Confirm Password</label>
                 <%= f.password_field :password_confirmation ,:class=>"input-block-level",:placeholder=>"Your Password confirmation"%> -->
              </div>
              
          <i></i><%= f.submit "Update",:style=>"font-size:12px", :class=>"btn btn-success" %>
          
         
            </div>
          
          <% end %>
            

            
          </div>
          <!-- // Row END -->
          
        </div>
        <!-- // Box END -->
       
      </div>
    </div>
</div>

