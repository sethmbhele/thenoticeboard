
  
<body class="login">
  <!-- Wrapper -->
<div id="login">
<div class="container">
  <div class="wrapper signup">
    
      <h1 class="glyphicons lock"><img src="/assets/logo1.png" alt="Avatar" /></h1>
    
      <!-- Box -->
      <div class="widget widget-heading-simple">
        
        <div class="widget-head">
          <h3 class="heading">Edit profile</h3>
          <div class="pull-right">
            <%= link_to "Back", :back ,:class=>"btn btn-inverse btn-mini"%>
          </div>
        </div>
        <div class="widget-body">
    
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
 
          <!-- Row -->
          <div class="row-fluid row-merge">
          
            <%= devise_error_messages! %>

            <div class="span6">
              <div class="innerR">  
                 <label class="strong">Username</label>
                
                 <%= f.text_field :username, :autofocus => true, :class=>"input-block-level", :placeholder=>"Your username"  %>
                 <label class="strong">Current Password(we need your current password to confirm your changes)</label>
                 <%=  f.password_field :current_password ,:class=>"input-block-level", :placeholder=>"Current Password" %>

                <label class="strong"> New Password (leave blank if you don't want to change it)</label>
                 <%=  f.password_field :password ,:class=>"input-block-level", :placeholder=>"Your Password" %>

                <label class="strong">Confirm Password</label>
                 <%= f.password_field :password_confirmation ,:class=>"input-block-level",:placeholder=>"Your Password confirmation"%>
              </div>
              <span class="btn btn-icon-stacked btn-block btn-primary glyphicons user_add" style="font-size:12px;" >update password  </br>
          <i></i><%= f.submit "Update",:style=>"font-size:12px", :class=>"btn btn-icon-stacked btn-block btn-primary glyphicons user_add" %>
          </span>
          <p>Having troubles? <a href="faq.html?lang=en&amp;layout_type=fluid&amp;menu_position=menu-left&amp;style=style-default-menus-light&amp;sidebar_type=dropdown">Get Help</a></p>
            </div>
          
          <% end %>
            
            
          </div>
          <!-- // Row END -->
          
          </form>
          <!-- // Form END -->
    
    
        </div>
        <!-- // Box END -->
        
      </div>
      
  </div>
</div>
</div>

